{
  "name": "ts-boilerplate",
  "description": "ts-boilerplate",
  "author": "Kristi Jorgji",
  "private": true,
  "engines": {
    "node": ">=22.16.0"
  },
  "scripts": {
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "start": "tsx -r dotenv/config src/index.ts",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "fix": "eslint --fix \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "build": "tsc && tsc-alias -p tsconfig.json",
    "clean": "rimraf dist",
    "script:example": "tsx -r dotenv/config src/scripts/example.ts"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ],
    "__tests__/**/*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@kristijorgji/eslint-config-typescript": "^0.0.3",
    "@types/node": "^25.3.1",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
